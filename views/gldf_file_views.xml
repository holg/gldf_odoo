<odoo>
    <record id="view_gldf_file_form" model="ir.ui.view">
        <field name="name">gldf.file.form</field>
        <field name="model">gldf.file</field>
        <field name="arch" type="xml">
            <form string="GLDF File">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="upload_date"/>
                        <field name="file_data" filename="name"/>
                        <field name="json_data" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="json_data"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
